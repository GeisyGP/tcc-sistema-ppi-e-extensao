generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  registration String     @unique
  name         String
  role         UserRole
  password     String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  deletedAt    DateTime?
  subjects     Subject[]
}

enum UserRole {
  SYSADMIN
  COORDINATOR
  TEACHER
  STUDENT
}

model Subject {
  id        String    @id @default(uuid())
  name      String
  teachers  User[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
