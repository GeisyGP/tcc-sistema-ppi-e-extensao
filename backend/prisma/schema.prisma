generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id                String    @id @default(uuid())
  name              String
  technologicalAxis String
  educationLevel    String
  degree            String
  modality          String
  shift             String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?
}

model User {
  id           String    @id @default(uuid())
  registration String    @unique
  name         String
  role         UserRole
  password     String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  subjects     Subject[]
  courseId     String[]
}

enum UserRole {
  SYSADMIN
  COORDINATOR
  TEACHER
  STUDENT
}

model Subject {
  id        String    @id @default(uuid())
  name      String
  teachers  User[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  courseId  String
}
